<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="/css/listUser.css">
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <div class="maindiv">
            <% if (locals.admin) { %>
                <div class="logo-tit">
                    <div>
                    <img src="/images/chalkLogo.png" alt="">
                    </div>
                    <h1>Lista de Usuarios</h1>
                </div>
                <div class="lista-user">
                    <ul>
                        <% for(let i = 0; i < users.length ; i++) {%> 
                        <li>
                            <img src="/images/avatar/<%= users[i].avatar %>" alt="">
                            <p class="email"><%= users[i].email %></p>
                            <p class="nombre"><%= users[i].nombre%> <%= users[i].apellido %></p>
                            <p class="rol"><%= users[i].rol_user.name%></p>
                            <div class="icons">
                                    <a href="/user/editPassword/<%= users[i].id %>"><i class="fa-solid fa-key"></i></a>
                                    <a href="/user/editUser/<%= users[i].id %>"><i class="fa-solid fa-gear"></i></a>
                                <form action="/user/destroyUserAdmin/<%= users[i].id %>" method="post">
                                <label for="delete"><i class="fa-solid fa-trash"></i></label>
                                <input type="submit" value="" id="delete">
                                </form>
                            </div>
                        </li>
                        <% } %> 
                    </ul>
                </div>
                <% } else { %>
                    <div class="logo-tit">
                        <div>
                        <img src="/images/chalkLogo.png" alt="">
                        </div>
                        <h1>Ups...</h1>
                    </div>
                    <% } %> 
            </div>
        </main>
             
            
    <%- include('../partials/footer.ejs') %>
</body>
</html>