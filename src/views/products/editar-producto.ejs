<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/crearProducto.css">
    <link rel="stylesheet" href="/css/normalize.css">
    
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <h1>Edicion de Producto</h1>
        <form action="/products/detalleProducto/<%=books.id%>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
        <div class="div-padre">
            <div>
                <label for="nombreProducto">Titulo del libro</label>
                <input type="text" name="nombreProducto" id="nombreProducto" value = "<%= books.title %> ">
            </div>
            <div>
                <label for="autors">Autor</label>
                <select name="autors" id="autors">
                    <% for( let i = 0; i < autors.length; i++ ) { %>
                        <% if (autors[i].id == books.autors_id) { %>
                            <option value="<%= autors[i].id %> " selected>
                                <%= autors[i].name %> 
                            </option>
                        <% } else {%>
                        <option value="<%= autors[i].id %> ">
                            <%= autors[i].name %> 
                        </option>
                    <% }} %>
                </select>
            </div>
            <div>
                <label for="genero">Genero</label>
                <select name="genero" id="genero">
                    <% for( let i = 0; i < genres.length; i++ ) { %>
                        <% if (genres[i].id == books.genres_id) { %>
                            <option value="<%= genres[i].id %> " selected>
                                <%= genres[i].name %> 
                            </option>
                        <% } else {%>
                        <option value="<%= genres[i].id %> ">
                            <%= genres[i].name %> 
                        </option>
                    <% }} %>
                </select>
            </div>
            <div class="descProduct">
                <label for="descProducto">Detalles</label>
                <textarea name="descProducto" id="descProducto" rows="4" ><%= books.description %></textarea>
            </div>
            <div>
                <div class="valor">
                <label for="price">Precio</label>
                <p>$</p>
                <input class="precio" type="number" name="price" id="price" placeholder=" <%= books.price %> ">
                </div>
            </div>
            <div>
                <div class="valor">
                <label for="stock">Stock disponible</label>
                <input class="precio" type="number" name="stock" id="stock" placeholder=" <%= books.stock %> ">
                </div>
            <div class="imagen">
            <label for="portada">Portada</label>
            <input type="file" name="portada" id="portada" placeholder="portada">
            </div>
            <div class="delete">
                <input type="submit" value="Editar Producto">
            </div>
        </div>
        </form>
        <form action="/products/detalleProducto/<%=books.id%>/edit?_method=DELETE" method="post">
            <div class="delete">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Eliminar Producto">
            </div>
        </form>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>